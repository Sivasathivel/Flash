<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FC4A1A</item>
        <item name="colorPrimaryDark">#4ABDAC</item>
        <item name="colorAccent">#F7B733</item>
    </style>
    <style name="layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#4ABDAC</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="question_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="answer_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="point_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:fontFamily">Monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
